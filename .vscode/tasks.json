{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/FS",
                "/Fe${fileDirname}\\bin\\${fileBasenameNoExtension}.exe",
                "/Fo${fileDirname}\\bin\\${fileBasenameNoExtension}.obj",
                //"/Fd${fileDirname}\\..\\bin\\${fileBasenameNoExtension}.pdb",
                "/Fd${fileDirname}\\bin\\vc140.pdb",
                "${file}",
                //  to link the resulting object file with user32.lib and gdi32.lib
                "user32.lib", "gdi32.lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}